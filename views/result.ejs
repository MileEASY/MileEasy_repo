        <% } %>
        <% if(mbti=='ENTP') { %>
            <img src="public/static/img/entp.png">
        <% } %>
        <% if(mbti=='ESFJ') { %>
            <img src="public/static/img/esfj.png">
        <% } %>
        <% if(mbti=='ESFP') { %>
            <img src="public/static/img/esfp.png">
        <% } %>
        <% if(mbti=='ESTJ') { %>
            <img src="public/static/img/estj.png">
        <% } %>
        <% if(mbti=='ESTP') { %>
