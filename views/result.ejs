            <img src="public/static/img/isfj.png">
        <% } %>
        <% if(mbti=='ISFP') { %>
            <img src="public/static/img/isfp.png">
        <% } %>
        <% if(mbti=='ISTJ') { %>
            <img src="public/static/img/istj.png">
        <% } %>
        <% if(mbti=='ISTP') { %>
            <img src="public/static/img/istp.png">
        <% } %>

        <div class="tour-box">
            <h1 class="country">추천 여행지는 💎 <%=spot%> 💎 입니다.</h1>
            <h2 class="reason" style="white-space: pre-line;"><%= reason %> </h2>
            <div class="tour"></div>
        </div>


    <div class="information">
        <!-- <ul>
            <li class="spot">정보<br><%=info%></li>
        </ul> -->
    </div>
    <a class="scroll" href="#infoBox"></a>
    <!-- <div class="scroll" onclick='showInfo()'></div> -->
    

</div>
        <div id="infoBox">
        <ul class="menu">
            <li class="menu-item">
                <div class="item">🚩 LOCATION </div>
                    <ul class="Locainfo">
                        <div id="map"></div>
                    </ul>
                    <a class="scroll2" href="#infoBox2"></a>
                </li>
                </ul>
                </div>

        <div id="infoBox2">
            <ul class="menu">
            <li class="menu-item">
            <div class="item"> <img src="public/static/img/info.png" alt="" class="infoImg"> INFO </div>
                <ul class="info" style="white-space: pre-line;">
                    <div class="text2"><%= info %></div> 
                </ul>
                <div class="item"><img src="public/static/img/etc.png" alt="" class="etcImg"> ETC</div>
                <ul class="info" style="white-space: pre-line;">
                    <div class="text3"><%= etc %></div> 
                </ul>
    <div class="btn">
        <button type="button" class="test-again" onclick="location.href='/mbtitest'">테스트 다시 하기</button>
        <button type="button" class="goto-main" onclick="location.href='/'">메인으로 돌아가기</button>
        <!-- <button class="share">공유하기</button> -->
    </div>
    <button class="share" onclick="share()">공유하기</button>
</div>

    <script>

        window.initMap = function () {
            const map = new google.maps.Map(document.getElementById("map"), {
            center: {lat : map_location.<%=mbti%>.lat, lng : map_location.<%=mbti%>.lng},
            zoom: 5,
            });
        };

        document.querySelector('#infoBox').style.display='none';
        document.querySelector('#infoBox2').style.display='none';

        $(".scroll").click(function() {
            document.querySelector('.scroll').style.display='none';
            // document.querySelector('.panel').style.display='none';
            document.querySelector('#infoBox').style.display='block';
            document.querySelector('#infoBox2').style.display='none';
        $('html,body').animate({
            scrollTop: $(".second").offset().top},
            'slow');
});

document.querySelector('#infoBox2').style.display='none'
        $(".scroll2").click(function() {
            document.querySelector('.scroll2').style.display='none'
            document.querySelector('#infoBox2').style.display='block';
        $('html,body').animate({
            scrollTop: $(".second").offset().top},
            'slow');
});

