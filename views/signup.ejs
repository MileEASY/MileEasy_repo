<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/static/css/style.css" />
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.5.0.min.js" ></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>Document</title>
    <style>
      .d-none {display: none;}
    </style>
  </head>
  <body>
    <div class="wrapper">
      <div class="cloud"><img src="../static/cloud.png" alt="구름" /></div>
      <div class="air air1"><img src="../static/air.png" alt="낙하산" /></div>
      <div class="air air2"><img src="../static/air.png" alt="낙하산2" /></div>
      <div class="plane plane1">
        <img src="../static/plane1.png" alt="비행기1" />
      </div>
      <div class="plane plane2">
        <img src="../static/plane2.png" alt="비행기1" />
      </div>

      <div class="main">
        <input type="checkbox" id="chk" aria-hidden="true" />

        <div class="signup">
          <form id="signup">
            <label for="chk" aria-hidden="true">Sign up</label>
            <input
              type="text"
              name="userName"
              placeholder="User name"
              required
            />
            <input type="text" name="userId" placeholder="id" required />
            <input
              type="password"
              name="userPw"
              placeholder="Password"
              required
            />
            <button type="button" onclick="signup();">Sign up</button>
          </form>
        </div>

        <div class="signin">
          <form id="signin">
            <label for="chk" aria-hidden="true">Sign in</label>
            <h3></h3>
            <input type="text" name="userId" placeholder="id" required />
            <input
              type="password"
              name="userPw"
              placeholder="Password"
              required
            />
            <button type="button" onclick="signin();">Sign in</button>
          </form>
        </div>
      </div>
    </div>
    <script>
      function signup(){
          let form = document.querySelector("#signup");
          let user = {
                  name:form.userName.value,
                  id:form.userId.value,
                  pw:form.userPw.value,
              }
          if(user.name == "" || user.id =="" || user.pw== ""){
              alert("회원 정보를 모두 기입해 주세요");
          } else {
              axios({
                  method: 'get',
                  url: '/signup',
                  params: {id:user.id}
              })
              .then((res)=>{
                      console.log(res);
                  if(res.data != false) { alert(`이미 있는 ID 입니다`);
                      $("input[name=userId]").val("");
                      $("input[name=userPw]").val("");
                  } else {
                      axios({
                      method: 'post',
                      url: '/signup',
                      data: user,
                      })
                      .then((response)=>{
                          console.log(response);
                          alert(`welcome, ${response.data.name}`);
                      });
                  }
              });           
          }   
      }    

      function signin(){
          let form = document.querySelector("#signin");
          let user = {
                  id:form.userId.value,
                  pw:form.userPw.value,
              }
          if(user.id =="" || user.pw== ""){
              alert("회원 정보를 모두 기입해 주세요");
          } else {
              axios({
                  method: 'get',
                  url: '/signin',
                  params: {
                      id: user.id,
                      pw: user.pw
                  }
              })
              .then((res)=>{
                  if(res.data.name){
                     alert(`welcome, ${res.data.name}!`);
                  } else {
                      alert(`정확한 정보를 입력하세요`);
                  } 
              });
          }    
      }
    </script>    
  </body>
</html>
